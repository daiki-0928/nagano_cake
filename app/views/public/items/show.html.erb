<h2>商品詳細</h2>

<table class='table'>
        <tr>
          <td><%= @item.name %></td>
          <td><%= @item.introduction %></td>
          <td><%= @item.price %>円</td>
          <td><%= form_with model: @item do |f| %>
              <%= f.select :amount, *[1..5], include_blank: "個数選択" %>
              <%= f.submit 'カートに入れる' %>
              <% end %>
          </td>
        </tr>
</table>


