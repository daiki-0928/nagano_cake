<h1>ジャンル一覧・追加</h1>

<%= form_with model: [:admin,@genre] do |f| %>
 <div>
   <label>ジャンル名</label>
   <%= f.text_field :name %>
  </div>

  <div>
   <%= f.submit '新規登録' %>
  </div>
<% end %>


 <table>
  <thead>
    <tr>
      <th>ジャンル</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
   <%@genres.each do |genre|%>
    <tr>
     <td><%= genre.name %></td>
     <td><%= link_to "編集する", edit_admin_genre_path(genre.id) %></td>
    </tr>

   <%end%>
  </tbody>
 </table>
