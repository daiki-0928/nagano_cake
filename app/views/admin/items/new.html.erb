<h2 class="mt-3">商品新規登録</h2>

  <%= form_with model: [:admin,@item] do |f| %>

    <div class="form-group">
      <label for="item_image">商品画像</label>
      <%= f.file_field :image %>
    </div>

    <div class="form-group">
      <div class ="field_with_errors">
        <label for ="item-name">商品名</label>
      </div>
      <div class ="field_with_errors">
        <%= f.text_field :name %>
      </div>
    </div>
    <div class="form-group">
      <label for="item-introduction">商品説明</label>
      <div class ="field_with_errors">
        <%= f.text_area :introduction %>
      </div>
    </div>
    <div class="form-group">
      <label for="item-genre">ジャンル</label>
      <div class ="field_with_errors">
       <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %>
      </div>
    </div>
    <div class="form-group">
      <label for="item-price">税抜価格</label>
      <div class ="field_with_errors">
        <%= f.text_field :price %>円
      </div>
    </div>

    <div class="form-group row">
      <label for="is_active" class="col-sm-2 col-form-label">販売ステータス</label>
      <div class="col-sm-10">
        <div class="form-check form-check-inline">
          <%= f.radio_button :is_active, "true" %>
          販売中
        </div>
        <div class="form-check form-check-inline">
          <%= f.radio_button :is_active, "false" %>
          販売停止中
        </div>
      </div>
    </div>

    <div class="form-group">
      <input type="submit" name="commit" value="新規登録" class="btn btn-success" data-disable-with="新規登録" />
    </div>
  <% end %>