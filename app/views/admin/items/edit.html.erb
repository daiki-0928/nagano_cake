<h2 class="mt-3">商品編集</h2>

  <%= form_with model: [:admin,@item] do |f| %>

    <div class="form-group">
      <label for="item_image">商品画像</label>
      <%= f.file_field :image %>
    </div>

    <div class="form-group">
      <div class ="field_with_errors">
        <label for ="item-name">商品名</label>
      </div>
      <div class ="field_with_errors">
        <%= f.text_field :name %>
      </div>
    </div>
    <div class="form-group">
      <label for="item-introduction">商品説明</label>
      <div class ="field_with_errors">
        <%= f.text_area :introduction %>
      </div>
    </div>
    <div class="form-group">
      <label for="item-genre">ジャンル</label>
      <div class ="field_with_errors">
       <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %>
      </div>
    </div>
    <div class="form-group">
      <label for="item-price">税抜価格</label>
      <div class ="field_with_errors">
        <%= f.text_field :price %>円
      </div>
    </div>
    <div class="form-group">
      <input type="submit" name="commit" value="変更を保存" class="btn btn-success" data-disable-with="変更を保存" />
    </div>
  <% end %>